{
  "name": "webpage-templates",
  "version": "1.0.0",
  "description": "Static webpage generator based on EJS/SASS/TS",
  "repository": "github:piellardj/webpage-templates",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run sass && npm run tsc  && npm run build-handlers",
    "build-handlers": "node app/build-handlers.js",
    "rebuild": "npm run lint && npm run clean && npm run build",
    "sass": "node-sass app/components --include-path app/components --output build/components --recursive --quiet --output-style compressed",
    "tsc": "tsc -p app/config/tsconfig.json",
    "clean": "shx rm -rf build/ test-demopage/* test-homepage/*",
    "lint": "npm run ts-lint && npm run sass-lint && npm run js-lint",
    "js-lint": "eslint -c app/config/.eslintrc.json app/**/*.js",
    "sass-lint": "sass-lint -c app/config/.sass-lint.yml -v",
    "ts-lint": "tslint -c app/config/tslint.json -p app/config/tsconfig.json",
    "test": "npm run rebuild && npm run test-demopage && npm run test-homepage",
    "test-demopage": "node build/test.js --page=demopage --data=samples/data-demopage.json --outdir=test-demopage",
    "test-homepage": "node build/test.js --page=homepage --data=samples/data-homepage.json --outdir=test-homepage"
  },
  "author": "“Jérémie PIELLARD <jeremie.piellard@gmail.com> (https://github.com/piellardj)",
  "license": "ISC",
  "dependencies": {
    "ejs": "^2.7.2",
    "fs-extra": "^8.1.0",
    "pretty": "^2.0.0",
    "shx": "^0.3.2"
  },
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/fs-extra": "^8.0.1",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.12.8",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.13.0",
    "sass-lint": "^1.13.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2",
    "uglify-es": "^3.3.9"
  }
}
